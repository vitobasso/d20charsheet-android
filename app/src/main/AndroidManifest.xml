<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vituel.dnd_character_sheet" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >

        <activity
            android:name="com.vituel.dndplayer.activity.summary.SummaryActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.vituel.dndplayer.activity.edit_char.EditCharActivity"
            android:label="@string/char_edit"/>

        <activity
            android:name="com.vituel.dndplayer.activity.SelectCharActivity"
            android:label="@string/char_open"/>

        <activity
            android:name="com.vituel.dndplayer.activity.SelectClassActivity"
            android:label="@string/class_manage"/>

        <activity
            android:name="com.vituel.dndplayer.activity.EditClassActivity"
            android:label="@string/class_edit"/>

        <activity
            android:name="com.vituel.dndplayer.activity.EditItemActivity"
            android:label="@string/item_edit"/>

        <activity
            android:name="com.vituel.dndplayer.activity.SelectItemActivity"
            android:label="@string/item_select"/>

        <activity
            android:name="com.vituel.dndplayer.activity.SelectTempEffectActivity"
            android:label="@string/temps_select"/>

        <activity
            android:name="com.vituel.dndplayer.activity.EditTempEffectActivity"
            android:label="@string/temps_edit"/>

        <activity
            android:name="com.vituel.dndplayer.activity.SelectRaceActivity"
            android:label="@string/race_select"/>

        <activity
            android:name="com.vituel.dndplayer.activity.EditRaceActivity"
            android:label="@string/race_edit"/>

        <activity
            android:name="com.vituel.dndplayer.activity.EditTraitActivity"
            android:label="@string/trait_edit"/>

        <activity
            android:name="com.vituel.dndplayer.activity.SelectTraitActivity"
            android:label="@string/trait_select"/>

        <activity
            android:name="com.vituel.dndplayer.activity.EditSkillActivity"
            android:label="@string/skill_edit"/>

        <activity
            android:name="com.vituel.dndplayer.activity.SelectSkillActivity"
            android:label="@string/skill_select"/>

        <activity
            android:name="com.vituel.dndplayer.activity.EditAttackRoundActivity"
            android:label="@string/skill_select"/>

    </application>

</manifest>
